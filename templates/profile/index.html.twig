{% extends 'admin.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <div class="p-8 flex flex-col items-center">
        <figure class="relative max-w-sm cursor-pointer">
            <a href="#">
                <div class="absolute rounded-full transition-all duration-200 filter w-40 h-40 text-transparent hover:text-white hover:bg-black hover:opacity-30 flex items-center justify-center">
                    <span class="">Edit</span>
                </div>
                <img class="rounded-full w-40 h-40 border border-gray-200" src="{{ asset('images/user-picture.jpg') }}" alt="image description">
            </a>
        </figure>
{#        <img class="rounded-full w-40 h-40 border border-gray-400" src="{{ asset('images/user-picture.jpg') }}" alt="">#}
        <span class="mt-4">Hello, User!</span>
        <div class="py-4 text-[#fc612e]">
            <a href="{{ path('app_sheets') }}">Sheets</a>
            <span class="text-black">|</span>
            <a href="{{ path('app_exercises') }}">Exercises</a>
            <span class="text-black">|</span>
            <a href="{{ path('app_profile_progress') }}">My Progress</a>
        </div>
    </div>
    {{ form_start(profileForm, { 'attr': {'class': 'mb-24 md:mb-40'}}) }}
        <div class="mb-2">
            <div class="md:flex md:flex-row gap-4">
                <div class="py-2 md:w-1/2">
                    {{ form_row(profileForm.name,{
                        'attr': {
                            'class': 'gymm-txt',
                            'placeholder': 'Name',
                            'aria-label': 'name'
                        }
                    }) }}
                </div>
                <div class="py-2 md:w-1/2">
                    {{ form_row(profileForm.lastname,{
                        'attr': {
                            'class': 'gymm-txt',
                            'placeholder': 'Last Name',
                            'aria-label': 'lastname'
                        }
                    }) }}
                </div>
            </div>
            <div class="md:flex md:flex-row gap-4">
                <div class="py-2 md:w-1/2">
                    {{ form_row(profileForm.mail,{
                        'attr': {
                            'class': 'gymm-txt',
                            'placeholder': 'E-mail',
                            'aria-label': 'email'
                        }
                    }) }}
                </div>
                <div class="py-2 md:w-1/2">
                    {{ form_row(profileForm.gender,{
                        'attr': {
                            'class': 'gymm-txt text-gray-500',
                            'aria-label': 'gender',
                            'disabled': 'true'
                        }
                    }) }}
                </div>
            </div>
            <div class="md:flex md:flex-row gap-4">
                <div class="py-2 md:w-1/3">
                    {{ form_row(profileForm.weight,{
                        'attr': {
                            'class': 'gymm-txt',
                            'placeholder': 'Weight',
                            'aria-label': 'weight'
                        }
                    }) }}
                </div>
                <div class="py-2 md:w-1/3">
                    {{ form_row(profileForm.height,{
                        'attr': {
                            'class': 'gymm-txt',
                            'placeholder': 'Height',
                            'aria-label': 'height'
                        }
                    }) }}
                </div>
                <div class="py-2 md:w-1/3">
                    {{ form_row(profileForm.age,{
                        'attr': {
                            'class': 'gymm-txt',
                            'placeholder': 'Age',
                            'aria-label': 'age',
                        }
                    }) }}
                </div>
            </div>
        </div>
        <div class="flex flex-row justify-end mt-8">
            <button class="gymm-btn-primary md:w-40">Save</button>
        </div>
    {{ form_end(profileForm) }}
{% endblock %}
