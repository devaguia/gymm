{% extends 'admin.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}

<div class="py-4 px-6 md:px-20 lg:px-60 bg-gray">
    <div class="p-8 flex flex-col items-center">
        <figure class="relative max-w-sm cursor-pointer">
            <a href="#">
                <div class="absolute rounded-full transition-all duration-200 filter w-40 h-40 text-transparent hover:text-white hover:bg-black hover:opacity-30 flex items-center justify-center">
                    <span class="">Edit</span>
                </div>
                <img class="rounded-full w-40 h-40 border border-gray-200" src="{{ asset('images/user-picture.jpg') }}" alt="image description">
            </a>
        </figure>
{#        <img class="rounded-full w-40 h-40 border border-gray-400" src="{{ asset('images/user-picture.jpg') }}" alt="">#}
        <span class="mt-4">Hello, User!</span>
        <div class="py-4 text-[#fc612e]">
            <a href="/sheets">Sheets</a>
            <span class="text-black">|</span>
            <a href="/exercises">Exercises</a>
            <span class="text-black">|</span>
            <a href="/progress">My Progress</a>
        </div>
    </div>
    <form class="mb-24 md:mb-40">
        <div class="mb-2">
            <div class="md:flex md:flex-row gap-4">
                <div class="py-2 md:w-1/2">
                    <label class="text-gray-500">Name:</label>
                    <div>
                        <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" type="text" name="name" id="name" required />
                    </div>
                </div>
                <div class="py-2 md:w-1/2">
                    <label class="text-gray-500">Last name:</label>
                    <div>
                        <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" type="text" name="last_name" id="last_name" required />
                    </div>
                </div>
            </div>
            <div class="md:flex md:flex-row gap-4">
                <div class="py-2 md:w-1/2">
                    <label class="text-gray-500">E-mail:</label>
                    <div>
                        <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" type="email" name="email" id="email" required />
                    </div>
                </div>
                <div class="py-2 md:w-1/2">
                    <label class="text-gray-500">Gender:</label>
                    <div>
                        <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" type="text" name="gender" id="gender" required readonly />
                    </div>
                </div>
            </div>
            <div class="md:flex md:flex-row gap-4">
                <div class="py-2 md:w-1/3">
                    <label class="text-gray-500">Weight:</label>
                    <div>
                        <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" type="text" name="weight" id="weight" required />
                    </div>
                </div>
                <div class="py-2 md:w-1/3">
                    <label class="text-gray-500">Height:</label>
                    <div>
                        <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" type="text" name="height" id="height" required />
                    </div>
                </div>
                <div class="py-2 md:w-1/3">
                    <label class="text-gray-500">Age:</label>
                    <div>
                        <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" type="number" name="age" id="age" min="0" max="90" required />
                    </div>
                </div>
            </div>
        </div>
        <div>
            <button class="float-right bg-[#fc612e] shadow-lg hover:bg-[#FD7A45] rounded-lg text-white py-2 mt-5 w-full md:w-40">Save</button>
        </div>
    </form>
</div>
{% endblock %}
