{% extends 'admin.html.twig' %}

{% block title %}New Exercise{% endblock %}

{% block body %}
    <form class="mt-6">
        <div>
            <h2 class="font-bold text-2xl">New Exercise</h2>
        </div>
        <hr class="w-full my-4">
        <div class="mt-2 py-4">
            <div>
                <label>Exercise name</label>
                <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" name="name" id="name" placeholder="Exercise name" aria-label="name">
            </div>
        </div>
        <div class="flex flex-col md:flex-row gap-4">
            <div class="md:w-1/3">
                <label>Series</label>
                <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" type="number" min="0" name="series" id="series" placeholder="0" aria-label="name">
            </div>
            <div class="md:w-1/3">
                <label>Repetitions</label>
                <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" type="number" min="0" name="repetitions" id="repetitions" placeholder="0" aria-label="name">
            </div>
            <div class="md:w-1/3">
                <label>Weight</label>
                <input class="w-full h-10 rounded-md outline-0 pl-4 shadow-md border border-gray-100" type="text" name="weight" id="weight" placeholder="0.0" aria-label="name">
            </div>
        </div>
        <div class="py-4">
            <div>
                <textarea class="w-full h-32 resize-none rounded-md outline-0 pl-4 pt-4 shadow-md border border-gray-100" name="description" id=description" placeholder="Sheet Description" aria-label="description"></textarea>
            </div>
        </div>
        <div class="mt-8 float-right w-full flex justify-end">
            <button class="bg-[#fc612e] shadow-lg hover:bg-[#FD7A45] block rounded-lg text-white py-2 px-4 w-full md:w-40 text-center">Save</button>
        </div>
    </form>
{% endblock %}
