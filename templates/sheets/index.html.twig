{% extends 'admin.html.twig' %}

{% block title %}Sheets{% endblock %}

{% block body %}
    <div class="flex flex-col md:flex-row w-full">
        <div class="w-full md:w-1/2 flex items-end mt-4">
            <h2 class="font-bold text-2xl">Your sheets</h2>
        </div>
        <div class="w-full md:w-1/2 flex flex-row justify-end mt-2 md:mt-5">
            <a class="gymm-btn-primary md:w-40" href="{{ path('app_add_sheets') }}">+ Add new sheet</a>
        </div>
    </div>
    <hr class="w-full my-4">
    <div>
        {% for sheet in sheetList %}
            <div class="mt-4">
                <div class="shadow-lg rounded-lg w-full py-2 px-4 border border-gray-100 grid grid-cols-[1fr_65px] text-sm">
                    <a href="{{ path('app_view_sheets') }}"  class="grid grid-cols-2 selection:bg-transparent">
                        <span class="w-full">{{ sheet.name }}</span>
                        <span class="hidden md:block md:w-1/2">0 Exercises</span>
                    </a>
                    <div class="flex justify-end">
                        <div class="px-4 flex items-center">
                            <a href="{{ path('app_edit_sheet', {sheet: sheet.id}) }}" class="transition-all duration-200 filter hover:opacity-50">
                                <img class="w-[18px]" src="{{ asset('images/icons/pen-to-square-solid.svg') }}" alt="">
                            </a>
                        </div>
                        <form class="flex items-center" method="post" action="{{ path('app_delete_sheet', {id: sheet.id}) }}">
                            <input type="hidden" value="DELETE" name="_method">
                            <button class="w-[16px] transition-all duration-200 filter hover:opacity-50">
                                <img src="{{ asset('images/icons/trash-can-regular.svg') }}" alt="">
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
